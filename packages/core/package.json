{
  "name": "@theredguild/devcontainer-wizard",
  "version": "1.2.0",
  "description": "A comprehensive CLI tool to set up fully equipped Web3 development containers with advanced security hardening and git integration.",
  "license": "MIT",
  "type": "commonjs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./bin/run.js",
    "./package.json": "./package.json",
    "./bin/run.js": "./bin/run.js"
  }, 
  "dependencies": {
    "@inquirer/core": "^10.1.15",
    "@inquirer/prompts": "^7.8.1",
    "@oclif/core": "^4.5.2"
  },
  "oclif": {
    "bin": "devcontainer-wizard",
    "commands": { "strategy": "single", "target": "./dist/index.js" },
    "tsconfig": "./tsconfig.json",
    "dirname": "devcontainer-wizard",
    "topicSeparator": " ",
    "devCommands": "./src/commands"
  },
  "files": [
    "bin/",
    "dist/"
  ],
  "scripts": {
    "build": "tsc && tsc-alias",
    "dev": "node ./bin/dev.js",
    "prod": "pnpm run build && node ./bin/run.js",
    "postpack": "rm -f oclif.manifest.json",
    "prepack": "pnpm run build && oclif manifest && oclif readme"
  },
  "devDependencies": {
    "@oclif/prettier-config": "^0.2.1",
    "@types/node": "^18.19.122",
    "oclif": "^4.5.0",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2"
  },
  "publishConfig": { "access": "public" },
  "engines": { "node": ">=18.17" },
  "repository": {
    "type": "git",
    "url": "https://github.com/theredguild/devcontainer-wizard.git",
    "directory": "packages/core"
  }
}
